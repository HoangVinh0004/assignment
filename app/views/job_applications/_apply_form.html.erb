<div class="card mt-4">
  <div class="card-body bg-secondary-subtle">
    <h4 class="card-title text-center">Apply now</h4>
    <%= form_with model: [@job, @job_application], local: true, data: { turbo: false } do |f| %>
      <div class="mb-3">
        <%= f.label :name, "Your Name:", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= f.label :email, "Your Email:", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= f.label :dob, "Date of Birth:", class: "form-label" %>
        <%= f.date_field :dob, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= f.label :gender, "Gender", class: "form-label" %>
        <%= f.select :gender, JobApplication.genders.keys.map { |g| [g.humanize, g] }, {}, class: "form-select" %>
      </div>
      <div class="mb-3">
        <%= f.label :description, "Cover Letter:", class: "form-label" %>
        <%= f.text_area :description, rows: 5, class: "form-control", required: true %>
      </div>
      <%= f.submit "Apply for this job", class: "btn btn-warning w-100" %>
    <% end %>
  </div>
</div>
